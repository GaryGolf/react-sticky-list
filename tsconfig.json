    "sourceMap": true,
    "module": "commonjs",
    "jsx": "react",
    "outDir": "./dist/",
    "target": "es5",
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "removeComments": true,
    "declaration": false,
    "lib": ["esnext", "dom"],
    "typeRoots": ["index.d.ts", "node_modules/@types"]
  },
  "include": ["./src/**/*"],
  "exclude": [
